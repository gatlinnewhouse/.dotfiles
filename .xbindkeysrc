#Raise Volume
"pavolume --noshow volup"
    m:0x0 + c:123
    XF86AudioRaiseVolume 

#Lower Volume
"pavolume --noshow voldown"
    m:0x0 + c:122
    XF86AudioLowerVolume 

#Mute Audio
"pavolume --noshow mutetoggle"
    m:0x0 + c:121
    XF86AudioMute 

#Toggle playing music
"lollypop --play-pause"
    m:0x0 + c:172
    XF86AudioPlay 

#Take a screenshot
"gscreenshot"
    m:0x0 + c:107
    Print 

#Suspend to RAM and Disk
"systemctl suspend"
    m:0x0 + c:150
    XF86Sleep 

#Lock Desktop
"bash /home/deleuze/.bin/lock.sh -l"
    m:0xc + c:119
    Control+Alt + Delete 

#Increase Brightness
"intelbacklight -inc 131.825"
    m:0x0 + c:233
    XF86MonBrightnessUp 

#Decrease backlight
"intelbacklight -dec 131.825"
    m:0x0 + c:232
    XF86MonBrightnessDown 

#Lock Screen
"betterlockscreen -l"
    m:0xc + c:22
    Control+Alt + BackSpace 

