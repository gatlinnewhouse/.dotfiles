# Brightness Keys
bindsym XF86MonBrightnessDown exec xbacklight -dec 5
bindsym XF86MonBrightnessUp exec xbacklight -inc 5

# Set gaps
gaps inner 10

# Launch albert with key combo
bindsym $mod+space exec --no-startup-id albert show

# Toggle sticky windows
bindsym $mod+s sticky toggle

# Title bar format
# First set the titlebar font size to a large size to get a good padding
font pango: VCR OSD 15
for_window [class=".*"] title_format "<span font='VCR OSD 7'>%title</span>"

# Get rid of window decoration on albert and lollypop
for_window [class="albert"] border none
for_window [class="Lollypop"] border none

# Run polybar at start
