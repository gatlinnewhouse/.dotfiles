#!/bin/sh
printf "\n"
printf "Cleaning GCC cache... \n"
printf "============================== \n"
printf "\n"
ccache -c
printf "\n"
printf "============================== \n"
printf "\n"
printf "\n"
printf "Cleaning browser profiles... \n"
printf "============================== \n"
printf "\n"
browser-vacuum
printf "\n"
printf "============================== \n"
printf "\n"
printf "\n"
printf "Clean the pacaur package cache \n"
printf "============================== \n"
printf "\n"
pacaur -Sc
printf "\n"
printf "============================== \n"
printf "\n"
printf "\n"
printf "Update the Arch repo & AUR mirrorlist \n"
printf "============================== \n"
printf "\n"
sudo reflector -c US --latest 300 --number 500 --age 12 --sort rate --save /etc/pacman.d/mirrorlist
printf "\n"
printf "============================== \n"
printf "\n"
printf "\n"
printf "Delete old log files for xsessions errors\n"
printf "============================== \n"
printf "\n"
trash ~/.xsession-errors.old
printf "\n"
printf "============================== \n"
printf "\n"
printf "\n"
printf "Uninstall true package orphans\n"
printf "============================== \n"
printf "\n"
pacaur -Rsn $(pacaur -Qtdq)
printf "\n"
printf "============================== \n"
printf "\n"
printf "\n"
printf "Upgrade and optimize the pacman database\n"
printf "============================== \n"
printf "\n"
sudo pacman-db-upgrade
sudo pacman-optimize
printf "\n"
printf "============================== \n"
printf "\n"
printf "\n"
printf "Update preload\n"
printf "============================== \n"
printf "\n"
gopreload-batch-refresh.sh
