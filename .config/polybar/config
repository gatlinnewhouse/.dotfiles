[bar/top_bar]
monitor = eDP-1
width = 100%
height = 32
offset-x = 0
offset-y = 0
background = #000000
foreground = #F5F5F5
padding = 0
module-margin = 0
line-size = 2
; Fonts
font-0 = MaterialDesignIcons:size=12;3
font-1 = fontawesome-webfont:size=12;3
font-2 = Arimo-Regular:size=12;3
font-3 = Arimo-Bold:size=12;3
font-4 = MaterialWifi:size=12;3
; Modules
modules-left = i3 
modules-center = 
modules-right = caffeine redshift bluetooth wireless-network backlight volume battery date menu-power

[settings]
; Prevent flood of update events
throttle-output = 5
; Throttle output (in milliseconds)
throttle-output-for = 60
; Throttle input (in miilliseconds)
throttle-input-for = 30

[module/volume]
type = internal/volume
; Soundcard to use
master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default
; Mixer to use
master-mixer = Master
; Formatting options
format-volume = <ramp-volume> <label-volume>
format-volume-padding = 2
; Muted formatting
format-muted = <label-muted>
format-muted-padding = 2
label-muted-font = 1
label-muted =  muted
ramp-volume-font = 1
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
label-volume = %percentage%%

[module/battery]
type = internal/battery
; Full at what percentage?
full-at = 100
; Specify batteries and adapters
battery = BAT0
adapter = AC
; Set polling interval = 2 minutes
poll-interval = 120
; Formatting options
format-charging = <animation-charging> <label-charging>
;format-charging-background = #455A64
format-charging-padding = 2
format-discharging = <ramp-capacity> <label-discharging>
;format-discharging-background = #455A64
format-discharging-padding = 2
label-full-font = 1
label-full =  100%
label-charging = %percentage%%
label-discharging = %percentage%%
ramp-capacity-font = 1
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-5 = 
ramp-capacity-6 = 
ramp-capacity-7 = 
ramp-capacity-8 = 
ramp-capacity-9 = 
ramp-capacity-10 = 
animation-chargining-font = 1
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-5 = 
animation-charging-6 = 
; Framerate in milliseconds
animation-charging-framerate = 750

[module/backlight]
type = internal/backlight
card = intel_backlight
; Disable scrolling to set backlight over this module
enable-scroll = false
; Formatting options
format = <ramp> <label>
format-padding = 2
label = %percentage%%
ramp-font = 1
ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 

[module/wireless-network]
type = internal/network
interface = wlp3s0
; Seconds to sleep between updates = 30s
interval = 30
; Formatting options
format-connected = <ramp-signal> <label-connected>
format-connected-padding = 2
format-disconnected = <label-disconnected>
format-disconnected-padding = 2
label-connected-font = 1
label-connected = %essid%
label-disconnected-font = 4
label-disconnected =  No signal
ramp-signal-font = 4
ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 

[module/date]
type = internal/date
; Seconds to sleep in between updates = 1 minute
interval = 60.0
; Formatting options
date = %b %d
time = %H:%M
format = <label>
label-font = 1
label = %date% - %time%
;label-background = #37474F
label-padding = 2

[module/i3]
type = internal/i3
enable-click = true
enable-scroll = false
wrapping-scroll = false
reverse-scroll = false
; Formatting options
format = <label-state> <label-mode>
label-mode = %mode%
label-mode-padding = 2
label-focused = 
label-focused-foreground = #F5F5F5
label-focused-font = 0
label-focused-padding = 1
label-unfocused = 
label-unfocused-foreground = #F5F5F5
label-unfocused-padding = 1
label-visible = 
label-visible-padding = 1
label-urgent = 
label-urgent-foreground = #FFC107
label-urgent-padding = 1

[module/menu-power]
type = custom/menu
label-open = 
label-open-foreground = #F5F5F5
label-open-background = #C62828
label-open-padding = 2
label-close = 
label-close-foreground = #F5F5F5
label-close-background = #424242
label-close-padding = 2
menu-0-0 = 
menu-0-0-foreground = #F5F5F5
menu-0-0-background = #2E7D32
menu-0-0-padding = 2
menu-0-0-exec = exec systemctl reboot
menu-0-1 = 
menu-0-1-foreground = #F5F5F5
menu-0-1-background = #C62828
menu-0-1-padding = 2
menu-0-1-exec = exec systemctl poweroff

[module/redshift]
type = custom/script
; Seconds to sleep in between updates = 5 minutes
interval = 300
exec = ~/.config/polybar/redshift.sh

[module/caffeine]
type = custom/script
interval = 5
exec = ~/.config/polybar/caffeine-status.sh

