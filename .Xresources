Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintmedium
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb
Xcursor.theme: xcursor-chromeos
!URxvt.bell-command: notify-send "rxvt-unicode: done!"

! ****************** !
!   URXVT SETTINGS   !
! ****************** !

! Use ibus for input
URxvt.inputMethod: ibus
URxvt.preeditType: OverTheSpot

! Extensions
URxvt.perl-ext:
URxvt.perl-ext-common:

! Name the terminal
URxvt*termName: rxvt-unicode-256color

! Speedhack
URxvt*buffered: false

! Start as a login shell
URxvt*loginShell: true

! Disable scroll bar
URxvt*scrollBar: false

! Use font glyphs
URxvt*skipBuiltinGlyphs: true

! PaperColor Theme
URxvt.foreground: #4D4D4C
URxvt.background: #EEEEEE
! black
URxvt.color0: #EDEDED
URxvt.color8: #969694
! red
URxvt.color1: #D7005F
URxvt.color9: #D7005F
! green
URxvt.color2: #718C00
URxvt.color10: #718C00
! yellow / orange
URxvt.color3: #D75F00
URxvt.color11: #D75F00
! blue
URxvt.color4: #4271AE
URxvt.color12: #4271AE
! magenta
URxvt.color5: #8959A8
URxvt.color13: #8959A8
! cyan
URxvt.color6: #3E999F
URxvt.color14: #3E999F
! white
URxvt.color7: #4D4D4C
URxvt.color15: #BDBDBD

! The font
URxvt*font: xft:FuraCode Nerd Font:size=10:antialias=true

! Home and End key functionality
URxvt.keysym.Home: \033[7~
URxvt.keysym.End: \033[8~
URxvt.keysym.KP_Home: \033[7~
URxvt.keysym.KP_End:  \033[8~

! Clipboard
URxvt.keysym.C-C: perl:clipboard:copy
URxvt.keysym.C-V: perl:clipboard:paste
URxvt.keysym.C-A-V: perl:clipboard:paste_escaped

! Disable control and shift operations
URxvt*iso14755: False
URxvt*iso14755_52: False

! URL handling
URxvt.url-select.launcher: firefox-nightly
URxvt.url-select.button: 1

! Save lines
URxvt.saveLines: 1024
