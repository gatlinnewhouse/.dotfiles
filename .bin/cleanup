#!/bin/sh
printf "\n"
printf "Cleaning GCC cache... \n"
printf "============================== \n"
printf "\n"
#sudo -u deleuze ccache -Cc
printf "\n"
printf "============================== \n"
printf "\n"
printf "\n"
printf "Cleaning browser profiles... \n"
printf "============================== \n"
printf "\n"
#browser-vacuum
printf "\n"
printf "============================== \n"
printf "\n"
printf "\n"
printf "Clean the yay package cache \n"
printf "============================== \n"
printf "\n"
sudo -u deleuze yay -Sc
printf "\n"
printf "============================== \n"
printf "\n"
printf "\n"
printf "Update the Arch repo & AUR mirrorlist \n"
printf "============================== \n"
printf "\n"
sudo -u deleuze reflector -c US --latest 300 --number 500 --age 12 --sort rate --save /etc/pacman.d/mirrorlist
printf "\n"
printf "============================== \n"
printf "\n"
printf "\n"
printf "Delete old log files for xsessions errors\n"
printf "============================== \n"
printf "\n"
sudo -u deleuze trash ~/.xsession-errors.old
printf "\n"
printf "============================== \n"
printf "\n"
printf "\n"
printf "Uninstall true package orphans\n"
printf "============================== \n"
printf "\n"
sudo -u deleuze yay -Rsncu $(sudo -u deleuze yay -Qtdq)
yay -Yc
printf "\n"
printf "============================== \n"
printf "\n"
printf "\n"
printf "Upgrade and optimize the pacman database\n"
printf "============================== \n"
printf "\n"
sudo pacman-db-upgrade
sudo pacman-optimize
printf "\n"
printf "============================== \n"
printf "\n"
printf "\n"
printf "Update preload\n"
printf "============================== \n"
printf "\n"
#sudo -u deleuze gopreload-batch-refresh.sh
printf "\n"
printf "============================== \n"
printf "\n"
printf "\n"
printf "Clean space on root partition\n"
printf "============================== \n"
printf "\n"
sudo bleachbit --clean system.localizations system.trash
printf "\n"
printf "============================== \n"
printf "\n"
printf "\n"
printf "Clean space by removing unused locales\n"
printf "============================== \n"
printf "\n"
sudo localepurge
printf "\n"
printf "============================== \n"
printf "\n"
printf "\n"
printf "Compile those GTK schemas\n"
printf "============================== \n"
printf "\n"
sudo glib-compile-schemas /usr/share/glib-2.0/schemas/
printf "\n"
printf "============================== \n"
printf "\n"
printf "\n"
printf "Check for .pacnew and .pacsave files in /etc/\n"
printf "============================== \n"
printf "\n"
sudo etc-update
printf "\n"
printf "============================== \n"
printf "\n"
printf "\n"
printf "Remove shittyfiles\n"
printf "============================== \n"
printf "\n"
rmshit.py
printf "\n"
printf "============================== \n"
printf "\n"
printf "\n"
printf "Run libtool\n"
printf "============================== \n"
printf "\n"
libtool --finish /usr/lib
printf "\n"
printf "============================== \n"
printf "\n"
printf "\n"
printf "Read archnews\n"
printf "============================== \n"
printf "\n"
archnews
